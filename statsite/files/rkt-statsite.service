[Unit]
Description=Statsite process running inside rkt
Requires=network-online.target
After=networking.service

[Service]
EnvironmentFile=/etc/rkt-environment
Slice=machine.slice
ExecStartPre=/usr/local/bin/rkt-cleanup statsite
ExecStart=/usr/bin/rkt \
--net=default \
--dns=${IP_UNBOUND} \
--dns-search="${DOMAIN}" \
--set-env-file=/etc/rkt-environment \
run statsite
ExecStopPost=/usr/local/bin/rkt-cleanup statsite
KillMode=mixed
Restart=always

[Install]
WantedBy=multi-user.target
