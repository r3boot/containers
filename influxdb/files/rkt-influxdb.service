[Unit]
Description=influxdb running in rkt
After=rkt-consul.service

[Service]
EnvironmentFile=/etc/rkt-environment
Slice=machine.slice
ExecStartPre=/usr/local/bin/rkt-cleanup influxdb
ExecStart=/usr/bin/rkt \
--net=default \
--dns="${IP_UNBOUND}" \
--dns-search="rkt" \
--volume=data,kind=host,source=/var/rkt/influxdb,readOnly=false \
run influxdb \
ExecStopPost=/usr/local/bin/rkt-cleanup influxdb
KillMode=mixed
Restart=always

[Install]
WantedBy=multi-user.target
