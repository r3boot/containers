[Unit]
Description=Unbound process running inside rkt
Requires=network-online.target
After=networking.service

[Service]
EnvironmentFile=/etc/rkt-environment
Slice=machine.slice
ExecStartPre=/usr/local/bin/rkt-cleanup redis
ExecStart=/usr/bin/rkt \
--net=default \
--dns=${IP_UNBOUND} \
--dns-search="${DOMAIN}" \
run redis
ExecStopPost=/usr/local/bin/rkt-cleanup redis
KillMode=mixed
Restart=always

[Install]
WantedBy=multi-user.target
