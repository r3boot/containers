[Unit]
Description=grafana running in rkt
After=rkt-consul.service

[Service]
EnvironmentFile=/etc/rkt-environment
Slice=machine.slice
ExecStartPre=/usr/local/bin/rkt-cleanup grafana
ExecStart=/usr/bin/rkt \
--net=default \
--dns="${IP_UNBOUND}" \
--dns-search="rkt" \
--volume=data,kind=host,source=/var/rkt/grafana,readOnly=false \
run grafana
ExecStopPost=/usr/local/bin/rkt-cleanup grafana
KillMode=mixed
Restart=always

[Install]
WantedBy=multi-user.target
